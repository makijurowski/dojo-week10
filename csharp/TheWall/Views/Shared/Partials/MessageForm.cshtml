@model TheWall.Models.Message 

<form asp-action="PostMessage" asp-controller="Wall" method="post" id="post">
    <span asp-validation-for="UserMessage"></span>
    <div class="input-field">
        <label asp-for="UserMessage">Post a Message:</label>
        <textarea class="materialize-textarea form-control validate" asp-for="UserMessage" data-length="1000"></textarea>
    </div>
    <button class="btn waves-effect waves-light btn amber darken-2" type="submit" name="action">Post Message</button>
</form>