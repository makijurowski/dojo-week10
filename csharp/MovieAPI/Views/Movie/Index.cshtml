@{
    ViewData["Title"] = "MovieAPI";
}

<div class="row">
    <div class="col-sm-1"> </div>
    <div class="col-sm-10">
        <div class="row">
            <h1 class="text-center alert alert-default">MovieAPI</h1>
        </div>
        <div class="row text-center well well-lg">
            <div class="col-sm-1">
            </div>
            <div class="col-sm-10">
                <form action="/search" method="post" class="form">
                    <div class="form-group">
                        <input type="text" value="Search for a movie title" name="search" class="form form-control"></input>
                    </div>
                    <input type="submit" value="Submit" name="submit" class="form btn btn-default btn-play"></input>
                </form>
            </div>
            <div class="col-sm-1">
            </div>
        </div>
        <div class="row text-center">
        </div>
        <div class="row text-center alert alert-default">
        </div>
        <div class="row text-center">
            <div class="col-sm-12">
                @{
                    if(@ViewData["movie"] != null)
                    {
                        <table class="table container">
                            <thead>
                                <tr>
                                    <td>
                                        <h5>Movie Name</h5>
                                    </td>
                                    <td>
                                        <h5>Rating</h5>
                                    </td>
                                    <td>
                                        <h5>Release Date</h5>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>               
                                <tr>
                                    <td>
                                        @ViewData["movie_name"]
                                    </td>
                                    <td>
                                        @ViewData["rating"]
                                    </td>
                                    <td>
                                        @ViewData["release_date"]
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    }
                }
            </div>
        </div>
    </div>
    <div class="col-sm-1"> </div>
</div>